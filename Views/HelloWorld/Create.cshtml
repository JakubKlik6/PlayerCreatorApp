@model PlayerViewModel

<div class = "row">
	<div class = "col-3">

		<div class="card">

			<div class="card-header" style="background-color:#e6f3ff">

			</div>

			<div class="card-body" style="background-color:#e6f3ff">
				<h4>Create a new player</h4>
				<hr />
				<form asp-controller="HelloWorld" asp-action="CreatePlayer" method="post">
					<div class = "mb-3">
						<label class = "form-label">Player Name</label>
						<input asp-for="Name" type = "text" class = "form-control"/>
					</div>

					<div class = "mb-3">
						<label class = "form-label">Player Surname</label>
						<input asp-for="Surname" type = "text" class = "form-control"/>
					</div>

					<div class = "mb-3">
						<label class = "form-label">Player Age</label>
						<input asp-for="Age" type = "number" class = "form-control"/>
					</div>

					<div class = "mb-3">
						<label class = "form-label">Player Possition</label>
						<input asp-for="Possition" type = "text" class = "form-control"/>
					</div>

					<div class = "mb-3">
						<button type="submit" class="btn btn-primary">Save</button>
					</div>

				</form>

			</div>

			<div class="card-footer" style="background-color:#e6f3ff">

			</div>

		</div>
	</div>
</div>